pipeline {
  agent {
    docker{
      image 'ubuntu:latest'
      args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
    }
  }
  stages {
    stage('checkout') {    
      agent{
        docker {image 'ubuntu:latest'} 
      }
      steps {
        sh 'echo "Passed"'
        git branch: 'main', url: 'https://github.com/cloudjerry-14/Jenkins-CICD.git'
      }
    }
    stage('build') {
      agent{
        docker{image 'maven:latest'}
      }
      steps {
        sh 'cd springboot-k8s-argo-helm-CICD/jenkins-k8s-argo && mvn clean package'
      }
    }
  }
}
