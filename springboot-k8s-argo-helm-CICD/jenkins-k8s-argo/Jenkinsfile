pipeline {
    agent any

    environment {
        JAVA_HOME = tool 'Java17'
        MAVEN_HOME = tool 'Maven'
        PATH = "$JAVA_HOME/bin:$MAVEN_HOME/bin:$PATH"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                // Add deployment steps if needed
            }
        }
    }
}
